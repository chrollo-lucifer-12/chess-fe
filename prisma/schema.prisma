generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum STATUS {
  LIVE
  NOTLIVE
}

enum MoveType {
  NORMAL
  CASTLING_KINGSIDE
  CASTLING_QUEENSIDE
  PROMOTION
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  githubId  Int?
  password  String?
  avatarUrl String?
  username  String    @unique
  sessions  Session[]
  players   Player[]
}

model Player {
  id        String @id @default(uuid())
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  color     String
  gamesAsP1 Game[] @relation("player1")
  gamesAsP2 Game[] @relation("player2")
}

model Game {
  id        String  @id @default(uuid())
  moves     Move[]
  status    STATUS  @default(LIVE)
  player1   Player? @relation("player1", fields: [playerId1], references: [id])
  player2   Player? @relation("player2", fields: [playerId2], references: [id])
  playerId1 String?
  playerId2 String?
}

model Move {
  id         String   @id @default(uuid())
  gameId     String
  game       Game     @relation(fields: [gameId], references: [id])
  piece      String
  x1         Int
  y1         Int
  x2         Int
  y2         Int
  moveType   MoveType @default(NORMAL)
  promotion  String?
  turnNumber Int
}
